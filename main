#!/bin/bash

clear;
echo "Loading..."
clear;

declare -A MYTOOLS
MENU=" q ) exit\n"
JSON=$(curl -s https://api.github.com/repos/Jaynarol/bash-tools/contents/menu)

while read -r line; do
  if [[ $line =~ \"name\".*\"(.*)\" ]]; then
    index=$(cut -d "-" -f 1 <<< ${BASH_REMATCH[1]})
    name=$(cut -d "-" -f 2 <<< ${BASH_REMATCH[1]})
  elif [[ $line =~ \"download_url\".*\"(.*)\" ]]; then
    MYTOOLS[$index]=${BASH_REMATCH[1]}    
    MENU="$MENU $index ) $name\n"
  fi
done <<< "$JSON"

while : ; do

  clear
  index=1

  printf "==================================\n"
  printf "$MENU"
  printf "==================================\n\n"
  printf "Please select your tools : "

  read -n1
  if [[ $REPLY == "q" ]]; then
    clear; exit
  fi
  clear;
  echo "Loading..."
  clear;
  bash <(curl -s ${MYTOOLS[$REPLY]})

done